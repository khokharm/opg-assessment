{
  "info": {
    "name": "3rd Party API Integration Tests",
    "description": "Integration tests for Nominatim (Geocoding) and NWS (Weather) APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Nominatim (Geocoding) API",
      "item": [
        {
          "name": "Search US City - Seattle",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is an array', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "    pm.expect(jsonData.length).to.be.greaterThan(0);",
                  "});",
                  "",
                  "pm.test('Results contain required location fields', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const firstResult = jsonData[0];",
                  "    pm.expect(firstResult).to.have.property('lat');",
                  "    pm.expect(firstResult).to.have.property('lon');",
                  "    pm.expect(firstResult).to.have.property('display_name');",
                  "    pm.expect(firstResult).to.have.property('address');",
                  "});",
                  "",
                  "pm.test('Results are filtered to US only', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const firstResult = jsonData[0];",
                  "    const displayName = firstResult.display_name.toLowerCase();",
                  "    pm.expect(displayName).to.include('united states');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "User-Agent",
                "value": "WeatherApp/1.0 IntegrationTest"
              }
            ],
            "url": {
              "raw": "https://nominatim.openstreetmap.org/search?q=Seattle&format=json&addressdetails=1&countrycodes=us&limit=5",
              "protocol": "https",
              "host": [
                "nominatim",
                "openstreetmap",
                "org"
              ],
              "path": [
                "search"
              ],
              "query": [
                {
                  "key": "q",
                  "value": "Seattle"
                },
                {
                  "key": "format",
                  "value": "json"
                },
                {
                  "key": "addressdetails",
                  "value": "1"
                },
                {
                  "key": "countrycodes",
                  "value": "us"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            },
            "description": "Search for Seattle using Nominatim API with US filter"
          }
        },
        {
          "name": "Search US City - Boston",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains results', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "    pm.expect(jsonData.length).to.be.greaterThan(0);",
                  "});",
                  "",
                  "pm.test('Coordinates are valid numbers', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const firstResult = jsonData[0];",
                  "    const lat = parseFloat(firstResult.lat);",
                  "    const lon = parseFloat(firstResult.lon);",
                  "    pm.expect(lat).to.be.a('number').and.to.be.within(-90, 90);",
                  "    pm.expect(lon).to.be.a('number').and.to.be.within(-180, 180);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "User-Agent",
                "value": "WeatherApp/1.0 IntegrationTest"
              }
            ],
            "url": {
              "raw": "https://nominatim.openstreetmap.org/search?q=Boston&format=json&addressdetails=1&countrycodes=us&limit=5",
              "protocol": "https",
              "host": [
                "nominatim",
                "openstreetmap",
                "org"
              ],
              "path": [
                "search"
              ],
              "query": [
                {
                  "key": "q",
                  "value": "Boston"
                },
                {
                  "key": "format",
                  "value": "json"
                },
                {
                  "key": "addressdetails",
                  "value": "1"
                },
                {
                  "key": "countrycodes",
                  "value": "us"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            },
            "description": "Search for Boston using Nominatim API"
          }
        }
      ]
