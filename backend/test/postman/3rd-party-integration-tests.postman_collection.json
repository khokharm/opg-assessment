    {
      "name": "NWS (Weather) API",
      "item": [
        {
          "name": "Get Grid Points - Seattle",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains properties', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('properties');",
                  "});",
                  "",
                  "pm.test('Properties contain forecast URL', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const props = jsonData.properties;",
                  "    pm.expect(props).to.have.property('forecast');",
                  "    pm.expect(props.forecast).to.include('https://api.weather.gov');",
                  "});",
                  "",
                  "pm.test('Properties contain observation stations URL', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const props = jsonData.properties;",
                  "    pm.expect(props).to.have.property('observationStations');",
                  "    pm.expect(props.observationStations).to.include('https://api.weather.gov');",
                  "});",
                  "",
                  "// Store forecast URL for next request",
                  "const forecastUrl = pm.response.json().properties.forecast;",
                  "pm.collectionVariables.set('forecastUrl', forecastUrl);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "User-Agent",
                "value": "WeatherApp/1.0 IntegrationTest"
              },
              {
                "key": "Accept",
                "value": "application/geo+json"
              }
            ],
            "url": {
              "raw": "https://api.weather.gov/points/47.6062,-122.3321",
              "protocol": "https",
              "host": [
                "api",
                "weather",
                "gov"
              ],
              "path": [
                "points",
                "47.6062,-122.3321"
              ]
            },
            "description": "Get NWS grid point data for Seattle coordinates"
          }
        },
        {
          "name": "Get Forecast - Seattle",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains properties', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('properties');",
                  "});",
                  "",
                  "pm.test('Properties contain forecast periods', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const props = jsonData.properties;",
                  "    pm.expect(props).to.have.property('periods');",
                  "    pm.expect(props.periods).to.be.an('array');",
                  "    pm.expect(props.periods.length).to.be.greaterThan(0);",
                  "});",
                  "",
                  "pm.test('Forecast periods have required fields', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const firstPeriod = jsonData.properties.periods[0];",
                  "    pm.expect(firstPeriod).to.have.property('name');",
                  "    pm.expect(firstPeriod).to.have.property('temperature');",
                  "    pm.expect(firstPeriod).to.have.property('temperatureUnit');",
                  "    pm.expect(firstPeriod).to.have.property('shortForecast');",
                  "    pm.expect(firstPeriod).to.have.property('detailedForecast');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "User-Agent",
                "value": "WeatherApp/1.0 IntegrationTest"
              },
              {
                "key": "Accept",
                "value": "application/geo+json"
              }
            ],
            "url": {
              "raw": "{{forecastUrl}}",
              "host": [
                "{{forecastUrl}}"
              ]
            },
            "description": "Get forecast data from URL returned by grid points endpoint"
          }
        },
