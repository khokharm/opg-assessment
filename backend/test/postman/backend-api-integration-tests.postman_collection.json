    {
      "name": "Add City to User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200 or 201', function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "});",
              "",
              "pm.test('City was added', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('cities');",
              "    pm.expect(jsonData.cities).to.be.an('array');",
              "    ",
              "    const addedCity = jsonData.cities.find(c => c.id === '47.6062_-122.3321');",
              "    pm.expect(addedCity).to.exist;",
              "    pm.expect(addedCity.name).to.equal('Seattle, WA');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
