        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/search?query=Seattle",
          "host": ["{{baseUrl}}"],
          "path": ["api", "search"],
          "query": [
            {
              "key": "query",
              "value": "Seattle"
            }
          ]
        }
