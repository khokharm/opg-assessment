    {
      "name": "Search Locations",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response is an array', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an('array');",
              "});",
              "",
              "pm.test('Results have required location fields', function () {",
              "    const jsonData = pm.response.json();",
              "    if (jsonData.length > 0) {",
              "        const firstResult = jsonData[0];",
              "        pm.expect(firstResult).to.have.property('id');",
              "        pm.expect(firstResult).to.have.property('name');",
              "        pm.expect(firstResult).to.have.property('lat');",
              "        pm.expect(firstResult).to.have.property('lon');",
              "    }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
